{% extends "admin/app-core.html.twig" %}



{% form_theme formView _self %}



{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('code/admin/css/custom/custom.css') }}" />
{% endblock %}



{% block content %}
<div class="card">
    <div class="border-bottom title-part-padding d-flex flex-row justify-content-start align-items-center">
        <h4 class="card-title mb-0">Création de page</h4>
        <a href="{{ path('adminSiteBriqueAdd') }}" class="btn px-4 rounded-pill btn-info mx-4 disabled"
            role="button">Créer une brique</a>
    </div>
    <div class="card-body">

        {{ form_start(formView) }}

                {{ form_row(formView.nom) }}

                <div class="row">
                    <div class="col-md-2">
                        {{ form_label(formView.url) }}
                        <h6 class="card-subtitle mb-4">Exemple : https://studiobontant/collection/<span
                                class='fw-bold'>enfant<span></h6>
                    </div>
                    <div class="col-md-10">
                        {{ form_errors(formView.url) }}
                        {{ form_widget(formView.url) }}
                        {{ form_help(formView.url) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        {{ form_label(formView.briques) }}
                    </div>
                    <div class="col-md-9">
                        {{ form_errors(formView.briques) }}
                        {{ form_widget(formView.briques) }}
                        {{ form_help(formView.briques) }}
                    </div>
                    <div class="col-md-1">
                        <button type="button" id="add-brique" class="btn btn-primary rounded-pill">Ajouter</button>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-2">
                        <label for="" class="col-form-label">Drag & Drop</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 d-flex justify-content-center">
                        <ul class="draggable-list list-inline border" id="draggable-list"></ul>
                    </div>
                    <div class="col-md-12 d-flex justify-content-center">
                        <button class="btn btn-success rounded-pill reset-btn mb-5" id="reset">Reset Page</button>
                    </div>
                </div>

                <button type="submit" class="btn px-4 rounded-pill btn-info">Ajouter</button>
                <a href="{{ path('adminSitePageAdd') }}" class="btn px-4 rounded-pill btn-secondary mx-4 right"
                    role="button">Retour</a>

                {{ form_end(formView) }}

    </div>
</div>
{% endblock %}



{% block form_row %}
<div class="mb-3 row">
    {{ form_label(form, null, {'label_attr': {'class': 'col-md-2 col-form-label'}}) }}
    <div class="col-md-10">
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form) }}
        {{ form_help(form) }}
    </div>
</div>
{% endblock %}



{% block scripts %}
<script src="{{ asset('code/admin/js/custom/dragDrop.js') }}"></script>
{% endblock %}
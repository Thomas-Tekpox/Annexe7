{% extends "admin/app-core.html.twig" %}

{% form_theme formView _self %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="#"></a>Promotions</li>
    <li class="breadcrumb-item"><a href="{{ path('adminCarteCadeau') }}">Gestion cartes cadeau</a></li>
    <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('adminCarteCadeauEdit') }}">Modifier une carte cadeau</a></li>
{% endblock %}

{% block content %}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Modifier une carte carte cadeau</h4>
        <h5 class="card-subtitle mb-3 border-bottom pb-3">
            Saississez ci-dessous les informations requises pour modifier une carte cadeau.
        </h5>

        {{ form_start(formView) }}

        {{ form_row(formView.codeCheque) }}

        {{ form_row(formView.DLC) }}

        {{ form_row(formView.montant) }}

        {# {{ form_row(formView.user) }} #}

        {{ form_row(formView.divers) }}

        <button type="submit" class="btn px-4 rounded-pill btn-info">Modifier</button>
        <a href="{{ path('adminCarteCadeau') }}" class="btn px-4 rounded-pill btn-secondary mx-4 right"
            role="button">Retour</a>

        {{ form_end(formView) }}

    </div>
</div>
{% endblock %}

{% block form_row %}
<div class="mb-3 row">
    {{ form_label(form, null, {'label_attr': {'class': 'col-md-2 col-form-label'}}) }}
    <div class="col-md-10">
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form) }}
        {{ form_help(form) }}
    </div>
</div>
{% endblock %}
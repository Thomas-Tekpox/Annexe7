{% extends "admin/app-core.html.twig" %}

{% form_theme formView _self %}

{% block content %}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Ajouter une photo</h4>
        <h5 class="card-subtitle mb-3 border-bottom pb-3">
            Saississez ci-dessous les informations requises pour l'ajout d'une photo.
        </h5>

        {{ form_start(formView) }}

        {{ form_row(formView.imageFile) }}

        {{ form_row(formView.alt) }}

        {{ form_row(formView.visibilite) }}

        <button type="submit" class="btn px-4 rounded-pill btn-info">Ajouter</button>
        <a href="{{ path('adminGaleriePhotos', {'id': id}) }}" class="btn px-4 rounded-pill btn-secondary mx-4 right"
            role="button">Retour</a>

        {{ form_end(formView) }}

    </div>
</div>
{% endblock %}

{% block form_row %}
<div class="mb-3 row">
    {{ form_label(form, null, {'label_attr': {'class': 'col-md-2 col-form-label'}}) }}
    <div class="col-md-10">
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form) }}
        {{ form_help(form) }}
    </div>
</div>
{% endblock %}
{% extends "admin/app-core.html.twig" %}



{% form_theme formView _self %}



{% block stylesheets %}

{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="#"></a>Site web</li>
    <li class="breadcrumb-item"><a href="{{ path('adminGalerie') }}">Gestion galeries</a></li>
    <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('adminGalerieAdd') }}">Ajouter une galerie</a></li>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- -------------------------------------------------------------- -->
    <!-- Start Page Content -->
    <!-- -------------------------------------------------------------- -->
    <!-- .row -->
    <div class="row">
        <div class="col-sm-12">
            <!-- ---------------------
                            start Default Basic Forms
                        ---------------- -->
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Nouvelle galerie</h4>

                    {{ form_start(formView) }}
                    <button type="submit" class="btn px-4 rounded-pill btn-info">Ajouter</button>
                    {{ form_end(formView) }}

                    <a href="{{ path('adminGalerie') }}" class="btn px-4 rounded-pill btn-secondary mx-4 right"
                        role="button">Retour</a>
                </div>
            </div>
            <!-- ---------------------
                            end Default Basic Forms
                        ---------------- -->
        </div>
    </div>
    <!-- /.row -->
    <!-- -------------------------------------------------------------- -->
    <!-- End PAge Content -->
    <!-- -------------------------------------------------------------- -->
</div>
{% endblock %}

{% block form_row %}
<div class="mb-3 row">
    {{ form_label(form, null, {'label_attr': {'class': 'col-md-2 col-form-label'}}) }}
    <div class="col-md-10">
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form) }}
        {{ form_help(form) }}
    </div>
</div>
{% endblock %}